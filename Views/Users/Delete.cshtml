@model crudaspnetcore.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete People</h2>

<h3>Are you sure you want to delete this people?</h3>

<div>
    <h4>People</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Name  
            </dt>
            <dd class="col-sm-10">
                @Model.name
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.email
            </dd>
        </dl>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>